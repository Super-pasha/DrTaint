{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make",
            "type": "shell",
            "command": "./scripts/make.sh && ./scripts/transfer.sh build build",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Configure arm optimized",
            "type": "shell",
            "command": "./scripts/configure.sh arm opt"
        },
        {
            "label": "Configure thumb optimized",
            "type": "shell",
            "command": "./scripts/configure.sh thumb opt"
        },
        {
            "label": "Configure arm",
            "type": "shell",
            "command": "./scripts/configure.sh arm no-opt",
        },
        {
            "label": "Configure thumb",
            "type": "shell",
            "command": "./scripts/configure.sh thumb no-opt"
        }
    ]
}